@model ServiceRequests.Models.ServiceRequestModel
@{ Layout = "_Layout"; ViewBag.Title = "Add a Service Request";}

<h2>Add a Service Request <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddServiceRequest" method="post">
    <div class="form-group">
        <label for="BuildingCode">Building Code:</label>
        <input class="form-control" name="BuildingCode" width="50" maxlength="3" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" width="250" maxlength="100" />
    </div>
    <div class="form-group">
        <label for="CreatedBy">Created By:</label>
        <input class="form-control" name="CreatedBy" width="100" maxlength="30" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
    <h2>Service Request</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Building Code</th>
                <th>Description</th>
                <th>Created By</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BuildingCode</td>
                <td>@Model.Description</td>
                <td>@Model.CreatedBy</td>
            </tr>
        </tbody>
    </table>
}